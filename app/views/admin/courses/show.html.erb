<h1><%= link_to @course.title, edit_admin_course_path(@course) %></h1>
<div class="col-xs-9 col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">Mentoren</div>
    <% if @mentors.count > 0 %>
      <ul class="list-group">
        <% @mentors.each do |mentor| %>
          <li class="list-group-item">
            <h4 class="list-group-item-heading">
              <%= mentor.name %>
            </h4>
            <%= mentor.email %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="panel-body">
        Für diesen Kurs hat sich momentan noch kein Mentor gemeldet.
      </div>
    <% end %>
  </div>
</div>
<div class="col-xs-9 col-md-6">
  <div class="panel panel-default">
    <div class="panel-heading">Studenten</div>
    <% if @students.count > 0 %>
      <ul class="list-group">
        <% @students.each do |student| %>
          <li class="list-group-item">
            <h4 class="list-group-item-heading">
              <%= student.name %>
            </h4>
            <%= student.email %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <div class="panel-body">
        Für diesen Kurs hat sich momentan noch kein Student gemeldet.
      </div>
    <% end %>
  </div>
</div>
